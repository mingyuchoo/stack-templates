{-# START_FILE .ghcid #-}
--command=stack ghci
--test=:main
--warnings
--restart=stack.yaml
--restart=package.yaml

{-# START_FILE .ghcid #-}
-- OPTIONS_GHC
:set +m
:set +s
:set +t
:set -Wall

--  PROMPT
:set prompt "\ESC[1;35m\x03BB> \ESC[m"
:set prompt-cont "\ESC[1;35m > \ESC[m"

-- INCLUDE DIRECTORIES
:set -iapp
:set -isrc
:set -itest

-- LANGUAGE EXTENSIONS
:set -XExplicitForAll
:set -XStandaloneKindSignatures

-- HLINT
:def hlint const . return $ ":! hlint \"src\""

-- HOOGLE
:def hoogle \x -> return $ ":! hoogle --count=20 \"" ++ x ++ "\""

{-# START_FILE default.nix #-}
# default.nix
let
  pkgs = import <nixpkgs> {};
  compilerVersion = "ghc963";
  compiler = pkgs.haskell.packages."${compilerVersion}";
in
  compiler.developPackage {
  root = ./.;
  modifier = drv:
    pkgs.haskell.lib.addBuildTools drv (
      with pkgs.haskellPackages;
      [ stack
        cabal-install
        stylish-haskell
        haskell-language-server
        hindent
        hlint
        hoogle
        ghcid
      ]
    );
}
